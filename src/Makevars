

BH_INCLUDE = `"$(R_HOME)/bin$(R_ARCH_BIN)/Rscript" --vanilla -e "cat(system.file('include', package = 'BH'))"`
PKG_CPPFLAGS = -I"../inst/include" -I"." -I"/usr/local/include" -DBOOST_RESULT_OF_USE_TR1 -DBOOST_NO_DECLTYPE -DBOOST_DISABLE_ASSERTS -Wl,-z,defs
PKG_LIBS ="-L/usr/lib -lboost_iostreams -lboost_filesystem -lboost_system"
SHLIB_LDFLAGS = "$(SHLIB_CXXLDFLAGS)"
LDFLAGS = "${PKG_LIBS}"
SHLIB_LD = $(SHLIB_CXXLD)
CXX_STD = CXX11



