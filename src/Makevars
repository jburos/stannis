

BH_INCLUDE = `"$(R_HOME)/bin$(R_ARCH_BIN)/Rscript" --vanilla -e "cat(system.file('include', package = 'BH'))"`
PKG_CPPFLAGS = -I"../inst/include" -I"." -I"${BH_INCLUDE}" -DBOOST_RESULT_OF_USE_TR1 -DBOOST_NO_DECLTYPE -DBOOST_DISABLE_ASSERTS
SHLIB_LDFLAGS = $(SHLIB_CXXLDFLAGS)
SHLIB_LD = $(SHLIB_CXXLD)
CXX_STD = CXX11



